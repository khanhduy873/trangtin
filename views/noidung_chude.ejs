<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.css" />
    <link rel="stylesheet" href="/css/style.css">
</head>
<!-- Chuyển động -->

<body>
    <div class="Header__Navigation">
        <div class="swiper mySwiper">
            <div class="swiper-wrapper">
                <% baiviets.forEach(function(row) { %>
                    <div class="swiper-slide">
                        <div class="container__title">
                            <span>Home</span>
                            <span>>></span>
                            <a href="/baiviet/chude/<%= row.ChuDe._id %>">
                                <span title="<%= row.ChuDe.TenChuDe %>">
                                    <%= row.ChuDe.TenChuDe %>
                                </span>
                            </a>
                        </div>
                        <div class="container__column-12">
                            <div class="container__content">
                                <a href="/baiviet/chitiet/<%= row._id %>">
                                    <div class="container--information">
                                        <div class="box--information-img">
                                            <img class="container--information-img" src="<%- firstImage(row.NoiDung) %>"
                                                alt="<%= row.TieuDe %>" />
                                        </div>
                                        <div class="container--information-detal">
                                            <h2 class="container--information-heading">
                                                <%= row.TieuDe %>
                                            </h2>
                                            <p class="container--information-text-detail">
                                                <%= row.TomTat %>
                                            </p>

                                            <div style="bottom: -30%; height: 30px; font-size: 20px;"
                                                class="container--information-text container--information-tacgia">
                                                <p>Ngày Đăng: <%= new
                                                        Date(row.NgayDang.toISOString()).toLocaleString("vi-VN") %>
                                                </p>
                                                <!-- <p >Tác Giả: <%= row.TacGia %></p> -->
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>

            <div class="swiper-button-next"></div>
            <div class="swiper-button-prev"></div>
            <div class="swiper-pagination"></div>
            <div class="autoplay-progress">
                <svg viewBox="0 0 48 48">
                    <circle cx="24" cy="24" r="20"></circle>
                </svg>
                <span></span>
            </div>
        </div>

        <!-- Swiper JS -->
        <script src="https://cdn.jsdelivr.net/npm/swiper@11/swiper-bundle.min.js"></script>

    </div>
</body>